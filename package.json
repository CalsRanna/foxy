{
  "name": "foxy",
  "description": "A wow editor useful and easy to use.",
  "author": "Cals Ranna",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "yarn dev:all",
    "dev:all": "concurrently -n=vue,electron -c=green,blue \"yarn dev:vue\" \"yarn dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "node script/build --env=development --watch",
    "build": "yarn build:vue && yarn build:electron && electron-builder",
    "build:vue": "vite build",
    "build:electron": "node script/build --env=production",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0"
  },
  "main": "dist/main/build.js",
  "build": {
    "appId": "xxx@gmail.com",
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!node_modules",
      "dist/main/**",
      "dist/render/**"
    ],
    "mac": {
      "artifactName": "${productName}_setup_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@vitejs/plugin-vue": "^1.2.1",
    "@vue/compiler-sfc": "^3.0.11",
    "chalk": "^4.1.1",
    "concurrently": "^6.0.2",
    "conventional-changelog-cli": "^2.1.1",
    "dotenv": "^8.2.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-connect": "^0.6.3",
    "electron-updater": "^4.3.8",
    "markdown-it": "^12.0.6",
    "minimist": "^1.2.5",
    "ora": "^5.4.0",
    "rollup-plugin-esbuild": "^4.1.0",
    "sass": "^1.32.11",
    "typescript": "^4.2.4",
    "vite": "^2.2.1",
    "vue-tsc": "^0.0.25",
    "wait-on": "^5.3.0"
  }
}
